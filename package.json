{
  "name": "papillon",
  "private": true,
  "scripts": {
    "start:storybook:develop": "NODE_ENV=develop start-storybook -p 3003 -c ./.storybook/develop",
    "start:storybook:release": "NODE_ENV=release start-storybook -p 5005 -c ./.storybook/release",
    "build-storybook:develop": "build-storybook -c .storybook/develop -o .storybook-static",
    "build-storybook:release": "build-storybook -c .storybook/release -o .storybook-static",
    "test": "jest --config jest.config.json --no-cache --silent --runInBand",
    "test:watchAll:silent": "clear && jest --config jest.config.json --watchAll --silent --verbose",
    "test:watchAll:loud": "clear && jest --config jest.config.json --watchAll",
    "test:watchChanged:silent": "clear && jest --config jest.config.json --watch --onlyChanged --silent --verbose",
    "test:watchChanged:loud": "clear && jest --config jest.config.json --watch --onlyChanged  --verbose",
    "test:coverage": "jest --config jest.config.json --coverage --collectCoverageFrom=src/js/**/*.js --silent",
    "lint": "eslint packages/**/**/*.js --fix",
    "lint:style": "stylelint packages/**/**/*.scss --fix",
    "lint:staged": "lint-staged",
    "build:develop": "webpack --config webpack.config.babel.js",
    "build:release": "npm run build:packages && npm run build-storybook:release",
    "build:packages": "set NODE_ENV=production && webpack --config webpack.config.babel.js",
    "bootstrap": "lerna bootstrap",
    "release": "npm run build:release && lerna publish",
    "deploy": "npm run build:release && gh-pages -d .storybook-static",
    "before:script": "npm run bootstrap && npm run build:release",
    "script": "npm run lint && npm run test"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mts/papillon.git"
  },
  "bugs": {
    "url": "https://github.com/mts/papillon/issues"
  },
  "homepage": "https://github.com/mts/papillon/#readme",
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "pre-commit": [
    "lint:staged"
  ],
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "git add"
    ],
    "*.scss": [
      "stylelint --syntax=scss --fix",
      "git add"
    ]
  },
  "devDependencies": {
    "@babel/core": "^7.1.2",
    "@babel/plugin-transform-spread": "^7.0.0",
    "@babel/preset-env": "^7.1.0",
    "@babel/preset-react": "^7.0.0",
    "@githubprimer/octicons-react": "^8.1.0",
    "@storybook/addon-actions": "^3.4.11",
    "@storybook/addon-info": "^3.4.11",
    "@storybook/addon-knobs": "^3.4.11",
    "@storybook/addon-links": "^3.4.11",
    "@storybook/addon-notes": "^3.4.11",
    "@storybook/addon-options": "^3.4.11",
    "@storybook/addons": "^3.4.11",
    "@storybook/react": "^3.4.11",
    "babel-eslint": "^10.0.1",
    "babel-jest": "^23.6.0",
    "babel-loader": "^8.0.4",
    "babel-plugin-transform-object-rest-spread": "^6.26.0",
    "babel-register": "^6.26.0",
    "classnames": "^2.2.6",
    "clean-webpack-plugin": "^0.1.19",
    "css-loader": "^1.0.0",
    "enzyme": "^3.6.0",
    "enzyme-adapter-react-16": "^1.5.0",
    "eslint": "^5.6.1",
    "eslint-config-airbnb": "^17.1.0",
    "eslint-config-prettier": "^3.1.0",
    "eslint-plugin-import": "^2.14.0",
    "eslint-plugin-jsx-a11y": "^6.1.1",
    "eslint-plugin-react": "^7.11.1",
    "extract-text-webpack-plugin": "^3.0.2",
    "gh-pages": "^2.0.1",
    "husky": "^1.1.1",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^23.6.0",
    "jest-enzyme": "^6.1.2",
    "lerna": "^3.3.2",
    "lint-staged": "^7.3.0",
    "node-sass": "^4.9.3",
    "octicons": "^8.1.0",
    "postcss-cssnext": "^3.1.0",
    "postcss-loader": "^3.0.0",
    "prettier": "^1.14.3",
    "prop-types": "^15.6.2",
    "react": "^16.5.1",
    "react-dom": "^16.5.1",
    "react-test-renderer": "^16.5.2",
    "sass-loader": "^7.1.0",
    "shortid": "^2.2.13",
    "style-loader": "^0.23.0",
    "stylelint": "^9.6.0",
    "stylelint-order": "^1.0.0",
    "webpack": "^3.12.0",
    "webpack-bundle-analyzer": "^3.0.2"
  }
}
