{
  "name": "papillon",
  "private": true,
  "scripts": {
    "release": "lerna publish",
    "uninstall-packages": "lerna run uninstall-packages --stream",
    "install-packages": "lerna run install-packages --stream",
    "reinstall-packages": "lerna run reinstall-packages --stream",
    "npm-update": "lerna run npm-update",
    "uninstall-primer": "lerna run uninstall-primer --stream",
    "install-primer": "lerna run install-primer --stream",
    "reinstall-primer": "lerna run reinstall-primer --stream",
    "start-storybook-develop": "NODE_ENV=develop start-storybook -p 3003 -c ./.storybook/develop",
    "start-storybook-release": "NODE_ENV=release start-storybook -p 5005 -c ./.storybook/release",
    "build-storybook-develop": "NODE_ENV=develop build-storybook -c .storybook/develop -o .storybook-static-develop",
    "build-storybook-release": "NODE_ENV=release build-storybook -c .storybook/release -o .storybook-static-release",
    "deploy-storybook-develop": "gh-pages -d .storybook-static-develop",
    "deploy-storybook-release": "gh-pages -d .storybook-static-release",
    "bootstrap": "npm-run-all build build-storybook-develop build-storybook-release lint:format test report-coverage",
    "lint:format": "npm-run-all lint format",
    "lint": "npm-run-all lint:js:jsx lint:scss",
    "lint:js:jsx": "eslint --ext .js --ext .jsx packages/**/lib/**/*.{js,jsx} --fix",
    "lint:scss": "echo \"No files matching the pattern packages/**/lib/**/*.scss\" && exit 0",
    "format": "npm-run-all format:js:jsx format:scss",
    "format:js:jsx": "prettier --write \"packages/**/lib/**/*.{js,jsx}\"",
    "format:scss": "echo \"No files matching the pattern packages/**/lib/**/*.scss\" && exit 0",
    "test": "jest -u --no-cache --silent --runInBand --coverage",
    "report-coverage": "codecov --token=c3f92083-19d7-4252-89e5-90658cbfd3e3",
    "build": "lerna run build --stream"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mts/papillon.git"
  },
  "bugs": {
    "url": "https://github.com/mts/papillon/issues"
  },
  "homepage": "https://github.com/mts/papillon/#readme",
  "pre-commit": [
    "lint:staged"
  ],
  "devDependencies": {
    "@babel/core": "^7.6.2",
    "@babel/plugin-proposal-class-properties": "^7.5.5",
    "@babel/plugin-proposal-object-rest-spread": "^7.6.2",
    "@babel/plugin-syntax-dynamic-import": "^7.2.0",
    "@babel/preset-env": "^7.6.2",
    "@babel/preset-react": "^7.0.0",
    "@githubprimer/octicons-react": "^8.5.0",
    "@primer/octicons": "^9.1.1",
    "@storybook/addon-actions": "^5.2.1",
    "@storybook/addon-info": "^5.2.1",
    "@storybook/addon-knobs": "^5.2.1",
    "@storybook/addon-links": "^5.2.1",
    "@storybook/addon-notes": "^5.2.1",
    "@storybook/addons": "^5.2.1",
    "@storybook/react": "^5.2.1",
    "@storybook/theming": "^5.2.1",
    "babel-core": "^7.0.0-bridge.0",
    "babel-eslint": "^10.0.3",
    "babel-jest": "^24.9.0",
    "babel-loader": "^8.0.6",
    "classnames": "^2.2.6",
    "clean-webpack-plugin": "^3.0.0",
    "codecov": "^3.6.1",
    "css-loader": "^3.2.0",
    "enzyme": "^3.10.0",
    "enzyme-adapter-react-16": "^1.14.0",
    "eslint": "^6.5.0",
    "eslint-config-airbnb": "^18.0.1",
    "eslint-config-prettier": "^6.3.0",
    "eslint-plugin-import": "^2.18.2",
    "eslint-plugin-jest": "^22.17.0",
    "eslint-plugin-jsx-a11y": "^6.2.3",
    "eslint-plugin-prettier": "^3.1.1",
    "eslint-plugin-react": "^7.14.3",
    "eslint-plugin-react-hooks": "^2.1.1",
    "gh-pages": "^2.1.1",
    "git-revision-webpack-plugin": "^3.0.4",
    "glob": "^7.1.4",
    "husky": "^3.0.7",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^24.9.0",
    "jest-enzyme": "^7.1.1",
    "lerna": "^3.16.4",
    "lint-staged": "^9.4.0",
    "mini-css-extract-plugin": "^0.8.0",
    "node-sass": "^4.12.0",
    "npm-run-all": "^4.1.5",
    "optimize-css-assets-webpack-plugin": "^5.0.3",
    "postcss-loader": "^3.0.0",
    "postcss-preset-env": "^6.7.0",
    "prettier": "^1.18.2",
