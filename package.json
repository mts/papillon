{
  "name": "root",
  "private": true,
  "scripts": {
    "start": "start-storybook -p 8000 -c .storybook",
    "storybook": "build-storybook -o build",
    "test": "jest --config jest.config.json --no-cache --silent --runInBand",
    "test:watchAll:silent": "clear && jest --config jest.config.json --watchAll --silent --verbose",
    "test:watchAll:loud": "clear && jest --config jest.config.json --watchAll",
    "test:watchChanged:silent": "clear && jest --config jest.config.json --watch --onlyChanged --silent --verbose",
    "test:watchChanged:loud": "clear && jest --config jest.config.json --watch --onlyChanged  --verbose",
    "test:coverage": "jest --config jest.config.json --coverage --collectCoverageFrom=src/js/**/*.js --silent",
    "lint": "eslint packages/**/**/*.js --fix",
    "lint:style": "stylelint packages/**/**/*.scss --fix",
    "lint:staged": "lint-staged",
    "build": "npm run build:packages",
    "build:packages": "set NODE_ENV=production && webpack --config webpack.config.babel.js",
    "build:dev": "webpack --config webpack.config.babel.js",
    "bootstrap": "set NODE_ENV=development && lerna bootstrap",
    "publish": "lerna publish"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mts/papillon.git"
  },
  "bugs": {
    "url": "https://github.com/mts/papillon/issues"
  },
  "homepage": "https://github.com/mts/papillon/#readme",
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "pre-commit": [
    "lint:staged"
  ],
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "git add"
    ],
    "*.scss": [
      "stylelint --syntax=scss --fix",
      "git add"
    ]
  },
  "devDependencies": {
    "@babel/core": "^7.1.2",
    "@babel/plugin-transform-spread": "^7.0.0",
    "@babel/preset-env": "^7.1.0",
    "@babel/preset-react": "^7.0.0",
    "@githubprimer/octicons-react": "^8.1.0",
    "@storybook/addon-actions": "^3.4.11",
    "@storybook/addon-info": "^3.4.11",
    "@storybook/addon-knobs": "^3.4.11",
    "@storybook/addon-links": "^3.4.11",
    "@storybook/addon-notes": "^3.4.11",
    "@storybook/addon-options": "^3.4.11",
    "@storybook/addons": "^3.4.11",
    "@storybook/react": "^3.4.11",
    "autoprefixer": "^9.1.5",
    "babel-eslint": "^10.0.1",
    "babel-jest": "^23.6.0",
    "babel-loader": "^8.0.4",
    "babel-plugin-transform-object-rest-spread": "^6.26.0",
    "babel-plugin-transform-runtime": "^6.23.0",
    "babel-register": "^6.26.0",
    "classnames": "^2.2.6",
    "clean-webpack-plugin": "^0.1.19",
    "css-loader": "^1.0.0",
    "cssnano": "^4.1.4",
    "enzyme": "^3.6.0",
    "enzyme-adapter-react-16": "^1.5.0",
    "eslint": "^5.6.1",
    "eslint-config-airbnb": "^17.1.0",
    "eslint-config-prettier": "^3.1.0",
    "eslint-plugin-import": "^2.14.0",
    "eslint-plugin-jsx-a11y": "^6.1.1",
    "eslint-plugin-react": "^7.11.1",
    "file-loader": "^2.0.0",
    "git-revision-webpack-plugin": "^3.0.3",
    "glob": "^7.1.3",
    "happypack": "^5.0.0",
    "html-webpack-plugin": "^3.2.0",
    "husky": "^1.1.1",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^23.6.0",
    "jest-enzyme": "^6.1.2",
    "lerna": "^3.3.2",
    "less-loader": "^4.1.0",
    "lint-staged": "^7.3.0",
    "mini-css-extract-plugin": "^0.4.3",
    "node-sass": "^4.9.3",
    "octicons": "^8.1.0",
    "optimize-css-assets-webpack-plugin": "^5.0.1",
    "postcss-cssnext": "^3.1.0",
    "postcss-loader": "^3.0.0",
    "prettier": "^1.14.3",
    "prop-types": "^15.6.2",
    "purify-css": "^1.2.5",
    "purifycss-webpack": "^0.7.0",
    "react": "^16.5.1",
    "react-dom": "^16.5.1",
    "react-test-renderer": "^16.5.2",
    "sass-loader": "^7.1.0",
    "shortid": "^2.2.13",
    "style-loader": "^0.23.0",
    "stylelint": "^9.6.0",
    "stylelint-order": "^1.0.0",
    "stylus-loader": "^3.0.2",
    "svg-inline-loader": "^0.8.0",
    "uglifyjs-webpack-plugin": "^2.0.1",
    "url-loader": "^1.1.1",
    "webpack": "^3.12.0",
    "webpack-cli": "^3.1.2",
    "webpack-merge": "^4.1.4",
    "yeticss": "^7.4.1"
  }
}
