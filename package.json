{
  "name": "papillon",
  "private": true,
  "scripts": {
    "build": "lerna run build --stream",
    "release": "lerna publish",
    "uninstall-packages": "lerna run uninstall-packages --stream",
    "install-packages": "lerna run install-packages --stream",
    "reinstall-packages": "lerna run reinstall-packages --stream",
    "uninstall-primer": "lerna run uninstall-primer --stream",
    "install-primer": "lerna run install-primer --stream",
    "reinstall-primer": "lerna run reinstall-primer --stream",
    "start-storybook-develop": "NODE_ENV=develop start-storybook -p 3003 -c ./.storybook/develop",
    "start-storybook-release": "NODE_ENV=release start-storybook -p 5005 -c ./.storybook/release",
    "build-storybook-develop": "NODE_ENV=develop build-storybook -c .storybook/develop -o .storybook-static",
    "build-storybook-release": "NODE_ENV=release build-storybook -c .storybook/release -o .storybook-static",
    "deploy-storybook": "gh-pages -d .storybook-static",
    "test": "lerna exec --concurrency 1 -- npm run test -- -u",
    "lint": "lerna run --stream lint",
    "lint-fix": "lerna run --parallel stream-fix",
    "ci": "lerna run ci --stream"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mts/papillon.git"
  },
  "bugs": {
    "url": "https://github.com/mts/papillon/issues"
  },
  "homepage": "https://github.com/mts/papillon/#readme",
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "pre-commit": [
    "lint:staged"
  ],
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "git add"
    ],
    "*.scss": [
      "stylelint --syntax=scss --fix",
      "git add"
    ]
  },
  "devDependencies": {
    "@babel/core": "7.2.0",
    "@babel/plugin-transform-spread": "7.2.0",
    "@babel/preset-env": "7.2.0",
    "@babel/preset-react": "7.0.0",
    "@githubprimer/octicons-react": "8.2.0",
    "@storybook/addon-actions": "4.0.11",
    "@storybook/addon-info": "4.0.11",
    "@storybook/addon-knobs": "4.0.11",
    "@storybook/addon-links": "4.0.11",
    "@storybook/addon-notes": "4.0.11",
    "@storybook/addon-options": "4.0.11",
    "@storybook/addons": "4.0.11",
    "@storybook/react": "4.0.11",
    "babel-core": "7.0.0-bridge.0",
    "babel-eslint": "10.0.1",
    "babel-jest": "23.6.0",
    "babel-loader": "8.0.4",
    "babel-plugin-transform-object-rest-spread": "6.26.0",
    "babel-register": "6.26.0",
    "classnames": "2.2.6",
    "clean-webpack-plugin": "1.0.0",
    "css-loader": "1.0.1",
    "cssnano": "4.1.7",
    "enzyme": "3.7.0",
    "enzyme-adapter-react-16": "1.7.0",
    "eslint": "5.9.0",
    "eslint-config-airbnb": "17.1.0",
    "eslint-config-prettier": "3.3.0",
    "eslint-plugin-import": "2.14.0",
    "eslint-plugin-jsx-a11y": "6.1.2",
    "eslint-plugin-react": "7.11.1",
    "extract-text-webpack-plugin": "3.0.2",
    "gh-pages": "2.0.1",
    "git-revision-webpack-plugin": "3.0.3",
    "glob": "7.1.3",
    "husky": "1.2.0",
    "identity-obj-proxy": "3.0.0",
    "jest": "23.6.0",
    "jest-enzyme": "7.0.1",
    "lerna": "3.5.1",
    "lint-staged": "8.1.0",
    "mini-css-extract-plugin": "0.4.5",
    "node-sass": "4.10.0",
    "nodemon": "1.18.7",
    "npm-run-all": "4.1.5",
    "octicons": "8.2.0",
    "optimize-css-assets-webpack-plugin": "5.0.1",
    "postcss-cssnext": "3.1.0",
    "postcss-loader": "3.0.0",
    "prettier": "1.15.3",
    "prop-types": "15.6.2",
    "purify-css": "1.2.5",
    "purifycss-webpack": "0.7.0",
    "react": "16.6.3",
    "react-dom": "16.6.3",
    "react-hot-loader": "4.3.12",
    "react-test-renderer": "16.6.3",
    "sass-loader": "7.1.0",
    "shortid": "2.2.14",
    "style-loader": "0.23.1",
    "stylelint": "9.9.0",
    "stylelint-order": "2.0.0",
    "uglifyjs-webpack-plugin": "2.0.1",
    "webpack": "4.27.0",
    "webpack-bundle-analyzer": "3.0.3",
    "webpack-cli": "3.1.2",
    "webpack-dev-server": "3.1.10",
    "webpack-merge": "4.1.4",
    "yeticss": "7.4.1"
  }
}
