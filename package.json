{
  "name": "papillon",
  "private": true,
  "scripts": {
    "build": "lerna run build --stream",
    "release": "lerna publish",
    "uninstall-packages": "lerna run uninstall-packages --stream",
    "install-packages": "lerna run install-packages --stream",
    "reinstall-packages": "lerna run reinstall-packages --stream",
    "uninstall-primer": "lerna run uninstall-primer --stream",
    "install-primer": "lerna run install-primer --stream",
    "reinstall-primer": "lerna run reinstall-primer --stream",
    "start-storybook-develop": "NODE_ENV=develop start-storybook -p 3003 -c ./.storybook/develop",
    "start-storybook-release": "NODE_ENV=release start-storybook -p 5005 -c ./.storybook/release",
    "build-storybook-develop": "NODE_ENV=develop build-storybook -c .storybook/develop -o .storybook-static",
    "build-storybook-release": "NODE_ENV=release build-storybook -c .storybook/release -o .storybook-static",
    "deploy-storybook": "gh-pages -d .storybook-static",
    "test": "lerna exec --concurrency 1 -- npm run test",
    "prettier-js-init": "npx prettier --write \"**/*.js\"",
    "pretty-quick": "pretty-quick",
    "lint": "lerna run --stream lint",
    "lint-fix": "lerna run --parallel stream-fix",
    "ci": "lerna run ci --stream",
    "cd": "npm-run-all build-storybook-develop build-storybook-release",
    "ci-cd": "npm-run-all ci cd"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mts/papillon.git"
  },
  "bugs": {
    "url": "https://github.com/mts/papillon/issues"
  },
  "homepage": "https://github.com/mts/papillon/#readme",
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "pre-commit": [
    "lint:staged"
  ],
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "git add"
    ],
    "*.scss": [
      "stylelint --syntax=scss --fix",
      "git add"
    ]
  },
  "devDependencies": {
    "@babel/core": "^7.2.2",
    "@babel/plugin-proposal-class-properties": "^7.3.0",
    "@babel/plugin-syntax-dynamic-import": "^7.2.0",
    "@babel/plugin-transform-runtime": "^7.2.0",
    "@babel/plugin-transform-spread": "^7.2.2",
    "@babel/preset-env": "^7.3.1",
    "@babel/preset-react": "^7.0.0",
    "@githubprimer/octicons-react": "^8.4.1",
    "@storybook/addon-actions": "^4.1.11",
    "@storybook/addon-info": "^4.1.11",
    "@storybook/addon-knobs": "^4.1.11",
    "@storybook/addon-links": "^4.1.11",
    "@storybook/addon-notes": "^4.1.11",
    "@storybook/addon-options": "^4.1.11",
    "@storybook/addons": "^4.1.11",
    "@storybook/react": "^4.1.11",
    "babel-core": "^7.0.0-bridge.0",
    "babel-eslint": "^10.0.1",
    "babel-jest": "^24.1.0",
    "babel-loader": "^8.0.5",
    "babel-plugin-transform-object-rest-spread": "^6.26.0",
    "babel-register": "^6.26.0",
    "classnames": "^2.2.6",
    "clean-webpack-plugin": "^1.0.1",
    "css-loader": "^2.1.0",
    "cssnano": "^4.1.10",
    "enzyme": "^3.8.0",
    "enzyme-adapter-react-16": "^1.9.1",
    "eslint": "^5.13.0",
    "eslint-config-airbnb": "^17.1.0",
    "eslint-config-prettier": "^4.0.0",
    "eslint-plugin-import": "^2.16.0",
    "eslint-plugin-jsx-a11y": "^6.2.1",
    "eslint-plugin-react": "^7.12.4",
    "extract-text-webpack-plugin": "^3.0.2",
    "gh-pages": "^2.0.1",
    "git-revision-webpack-plugin": "^3.0.3",
    "glob": "^7.1.3",
    "husky": "^1.3.1",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^24.1.0",
    "jest-enzyme": "^7.0.1",
    "lerna": "^3.13.0",
    "lint-staged": "^8.1.4",
    "mini-css-extract-plugin": "^0.5.0",
    "node-sass": "^4.11.0",
    "npm-run-all": "^4.1.5",
    "octicons": "^8.4.1",
    "optimize-css-assets-webpack-plugin": "^5.0.1",
    "postcss-cssnext": "^3.1.0",
    "postcss-loader": "^3.0.0",
    "prettier": "^1.16.4",
    "pretty-quick": "^1.10.0",
    "prop-types": "^15.7.2",
    "purify-css": "^1.2.5",
    "purifycss-webpack": "^0.7.0",
    "react": "^16.8.2",
    "react-dom": "^16.8.2",
    "react-hot-loader": "^4.6.5",
    "react-test-renderer": "^16.8.2",
    "sass-loader": "^7.1.0",
    "shortid": "^2.2.14",
    "style-loader": "^0.23.1",
    "stylelint": "^9.10.1",
    "stylelint-order": "^2.0.0",
    "uglifyjs-webpack-plugin": "^2.1.1",
    "webpack-bundle-analyzer": "^3.0.4",
    "webpack-cli": "^3.2.3",
    "webpack-dev-server": "^3.1.14",
    "webpack-merge": "^4.2.1",
    "yeticss": "^7.4.2"
  }
}
