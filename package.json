    "sass-loader": "^8.0.0",
    "shortid": "^2.2.15",
    "style-loader": "^1.0.0",
    "stylelint": "^11.0.0",
    "stylelint-order": "^3.1.1",
    "uglifyjs-webpack-plugin": "^2.2.0",
    "webpack-bundle-analyzer": "^3.5.2",
    "webpack-cli": "^3.3.9",
